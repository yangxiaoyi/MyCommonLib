<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_white_round_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_5"
        android:maxLines="10"
        android:padding="@dimen/margin_10"
        android:text="fdfsdf\nfdsfds\nfdsfsd"
        android:textColor="@color/font_3_color"
        android:textSize="@dimen/content_body" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_35"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_35"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@drawable/lib_cancel_bg"
            android:text="取消"
            android:textColor="@color/font_3_color"
            android:textSize="@dimen/content_body" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@drawable/lib_ok_bg"
            android:text="确定"
            android:textColor="@color/white_color"
            android:textSize="@dimen/content_body" />

    </LinearLayout>

</LinearLayout>
