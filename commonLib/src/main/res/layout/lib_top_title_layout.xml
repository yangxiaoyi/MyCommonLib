<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/crms_top_height"
    android:background="@color/lib_colorAccent">

    <ImageView
        android:id="@+id/iv_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_15"
        android:paddingRight="@dimen/margin_30"
        android:paddingBottom="@dimen/margin_15"
        android:src="@drawable/lib_back" />

    <ImageView
        android:id="@+id/iv_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_10"
        android:src="@drawable/lib_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_top_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_10"
        android:text="清空"
        android:textColor="@color/white_color"
        android:textSize="@dimen/content_body"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:ems="12"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="title"
        android:textColor="@color/white_color"
        android:textSize="@dimen/crms_top_font_size" />

</RelativeLayout>
